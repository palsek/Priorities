@model AspNetIdentityTry1.Models.ChangePasswordModel

@{
    ViewBag.Title = "ChangePassword";
}

<h2>Change Password</h2>

@if (TempData["Notification"] != null)
{
    <h4 style="color: red">@TempData["Notification"]</h4>
}



@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <table class="table">
        <tr>
            <th>User</th>
            <th>Old password</th>
            <th>New password</th>
            <th>Confirm password</th>
        </tr>
        <tr>
            <td>@Html.DisplayTextFor(m => m.Email)</td>
            <td>@Html.EditorFor(m => m.OldPassword)</td>
            <td>@Html.EditorFor(m => m.NewPassword)</td>
            <td>@Html.EditorFor(m => m.ConfirmNewPassword)</td>
        </tr>
    </table>

    @Html.HiddenFor(m => m.Email)
