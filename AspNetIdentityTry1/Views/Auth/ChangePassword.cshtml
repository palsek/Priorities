    <p> @Html.NameFor(m => m.OldPassword)    </p>
    <p>@Html.EditorFor(m => m.OldPassword)</p>

    <p> @Html.NameFor(m => m.NewPassword)</p>
    <p> @Html.EditorFor(m => m.NewPassword)</p>

    <p>@Html.NameFor(m => m.ConfirmNewPassword)</p>
    <p>@Html.EditorFor(m => m.ConfirmNewPassword)</p>
   */
   
    //@Html.EditorForModel()

    <p>
        <button type="submit" class="btn btn-default">Change password</button>
    </p>
}
