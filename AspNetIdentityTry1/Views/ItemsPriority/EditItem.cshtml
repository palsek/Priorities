@model AspNetIdentityTry1.Models.Item

@{
    ViewBag.Title = "EditItem";

    List<SelectListItem> listPriorities = new List<SelectListItem>();
    listPriorities.Add(new SelectListItem
    {
        Text = "VeryLow",
        Value = "VeryLow"
    });
    listPriorities.Add(new SelectListItem
    {
        Text = "Low",
        Value = "Low"
    });
    listPriorities.Add(new SelectListItem
    {
        Text = "Medium",
        Value = "Medium"
    });
    listPriorities.Add(new SelectListItem
    {
        Text = "High",
        Value = "High"
    });
    listPriorities.Add(new SelectListItem
    {
        Text = "VeryHigh",
        Value = "VeryHigh"
    });

    List<SelectListItem> listUsers = new List<SelectListItem>();

    if (ViewBag.allUsersName != null)
    {
        foreach (var userName in ViewBag.allUsersName)
        {
            listUsers.Add(new SelectListItem
            {
                Text = userName,
                Value = userName
            });
        }
    }

    List<SelectListItem> listStatuses = new List<SelectListItem>();
    listStatuses.Add(new SelectListItem
    {
        Text = "New",
        Value = "New"
    });
    listStatuses.Add(new SelectListItem
    {
        Text = "InProgress",
        Value = "InProgress"
    });
    listStatuses.Add(new SelectListItem
    {
        Text = "Done",
        Value = "Done"
    });
}

<h2>Edit Item</h2>

@if (TempData["Notification"] != null)
{ 
    <h4 style="color: red">@TempData["Notification"]</h4>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Priority, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Priority, listPriorities, new { htmlAttributes = new { @class = "form-control" } })                
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.UserName, listUsers)
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div> 

        <div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Status, listStatuses, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(i => i.Created)
        @Html.Hidden("ParentUserName", Model.ParentUserName)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
